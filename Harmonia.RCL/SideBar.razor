<div class="sidebar">
  <div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand">Harmonia</a>
      <button title="Menu" class="navbar-toggler" @onclick="() => _collapse = !_collapse">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
  <div class="@(_collapse ? "collapse" : "") navbar-scrollable" @onclick="() => _collapse = !_collapse">
    <nav class="flex-row" style="padding: 5px">
      @ChildContent
    </nav>
  </div>
</div>

@code {

  private bool _collapse = true;

  [Parameter]
  public RenderFragment ChildContent { get; set; }

}